<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EventManagement</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/EventManagement.styles.css" asp-append-version="true" /> *@

</head>

<body>

    <header class="navbar bg-body-tertiary  border-bottom px-5 ">
        <nav class="container-fluid ">
            <div class="">
                <p class="nav-item">Logo</p>
            </div>

            <div class="menu">
                <ul class="list nav p-3">
                    <li><a href="#" class="nav-item">Home</a></li>
                    <li class="dropdown">
                        <a href="#" role="button" class="nav-item  dropdown-toggle"
                            data-bs-toggle="dropdown">Events</a>
                        <ul class="dropdown-menu">
                            <li><a href="#" class="dropdown-item">2025</a></li>
                            <li><a href="#" class="dropdown-item">2024</a></li>
                            <li><a href="#" class="dropdown-item">2023</a></li>
                            <li><a href="#" class="dropdown-item">2022</a></li>
                        </ul>

                    </li>
                    <li><a href="#" class="nav-item">Gallery</a></li>
                    <li><a href="#" class="nav-item">About Us</a></li>
                </ul>
            </div>

            <div class="buttons">
                <a asp-page="/Auth/Signup" class="btn btn-primary">Login</a>
            </div>
        </nav>
    </header>

   
   

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - EventManagement - <a asp-area="" asp-page="/About">About Us</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>